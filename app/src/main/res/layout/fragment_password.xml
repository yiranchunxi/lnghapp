<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/color272727"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="40dp"
            android:text="@string/register_new_tag3"/>



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_new_tag4"
            android:textSize="14sp"
            android:textColor="@color/colorNewsItemDate"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/passwordLengthMustAbove"
            android:textSize="14sp"
            android:textColor="@color/colorNewsItemDate"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="48dp"
            android:layout_marginRight="40dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/et_register_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:background="@null"
                android:textSize="19sp"
                android:inputType="textPassword"
                android:layout_marginRight="5dp"
                android:maxLines="1"
                android:maxLength="16"
                />
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_password_clear"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/icon_nav_close"/>


            <androidx.appcompat.widget.AppCompatCheckBox
                android:checked="false"
                android:id="@+id/cbDisplayPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:button="@drawable/selector_fragment_password"
                android:layout_marginLeft="13dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@color/colorPrimaryRed"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_register_password"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/btn_login"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:layout_marginTop="27dp"
            android:text="@string/register_new_tag5"/>
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@android:color/white"
        android:paddingBottom="8dp"
        >
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="14dp"
            android:textSize="14sp"
            android:textColor="@color/colorTabTextNormal"
            android:id="@+id/newsTopItemTitleTextView"
            android:maxLines="2"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:background="@drawable/shape_news_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/newsTopItemDateTextView"
            android:layout_marginLeft="12dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            android:id="@+id/newsTopItemTitleTagTextView"
            android:text="@string/topNews"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/newsTopClassTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:textColor="@color/colorNewsItemDate"
            android:textSize="12sp"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/newsTopClassTextView"
            android:layout_marginLeft="12dp"
            android:textSize="12sp"
            android:textColor="@color/colorNewsItemDate"
            android:id="@+id/newsTopItemDateTextView"
            />

    </RelativeLayout>